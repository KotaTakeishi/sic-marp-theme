{
  "name": "sic-marp-theme",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "marp -s -w .",
    "export": "marp --pdf slide.md -o ./public/slide.pdf && marp --pptx --image-scale 2 slide.md -o ./public/slide.pptx",
    "presentation": "marp --preview --image-scale 2 slide.md ./public/slide.html"
  },
  "dependencies": {
    "@marp-team/marp-cli": "^4.2.3",
    "markdownlint": "^0.38.0"
  },
  "marp": {
    "themeSet": "./theme",
    "html": true,
    "allowLocalFiles": true
  }
}
